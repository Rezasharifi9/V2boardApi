        $(function () {

            $("#planGroup").wrap('<div class="position-relative"></div>').select2({
                placeholder: 'انتخاب دسته بندی',
                dropdownParent: $("#planGroup").parent(),
                allowClear: false
            });

            Groups("#planGroup");


            $("#planTime").wrap('<div class="position-relative"></div>').select2({
                placeholder: 'انتخاب مدت زمان',
                dropdownParent: $("#planTime").parent(),
                allowClear: false
            });

            

        });

        function Groups(selectId) {
            var $select = $(selectId);
            $.ajax({
                url: "/App/ServerGroups/GetSelectUserGroups",
                type: "get",
                dataType: "json",
                async: true,
                success: function (res) {
                    console.log(res);
                    // پاک کردن گزینه‌های قبلی
                    $select.empty();

                    // افزودن گزینه‌های جدید
                    $.each(res.data, function (index, item) {
                        var newOption = new Option(item.GroupName, item.ID, false, false);
                        $select.append(newOption);
                    });
                },
                error: function (xhr, status, error) {
                    console.error("An error occurred: " + status + " " + error);
                }
            });

        }

    </script>
