@model List<DataLayer.DomainModel.tbLogs>

@using V2boardApi.Tools;
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body table-responsive">
                <h4 class="card-title">Account Log - @ViewBag.Name</h4>
                <table id="AccountLogTable" class="table" style="width:100%">
                    <thead>
                        <tr>
                            <th>Create Date</th>
                            <th>Action</th>
                            <th>AccountName</th>
                            <th>Plan</th>
                            <th>Operation</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Utility.ConvertDateTimeToShamsi2(item.CreateDatetime.Value)</td>
                                <td>
                                    @if (item.Action == "کاربر اضافه کرد")
                                    {
                                        <label class="badge badge-info">New</label>
                                    }
                                    else
                                    {
                                        <label class="badge badge-success">Renew</label>
                                    }

                                </td>
                                <td>@item.FK_NameUser_ID</td>
                                <td>@item.tbLinkUserAndPlans.tbPlans.Plan_Name</td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-inverse-dark btn-icon" data-bs-toggle="dropdown" aria-expanded="true"><i class="mdi mdi-tooltip-edit"></i></button>
                                        <div class="dropdown-menu" data-popper-placement="bottom-start" style="position: absolute; inset: 0px auto auto 0px; margin: 0px; transform: translate(0px, 46px);cursor: pointer;">
                                            <a class="dropdown-item" onclick="DeleteAccount('@Url.Action("DeleteAccountLog","Admin",new {area="App",id=item.log_ID})')">Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>


<script>
    new DataTable('#AccountLogTable', {
        order: [[1, 'desc']]
    });

    function DeleteAccount(Url) {

        Swal.fire({
            title: "Do you want to Delete Account?",
            showDenyButton: true,
            showCancelButton: true,
            confirmButtonText: "Delete",
            denyButtonText: `Don't Delete`
        }).then((result) => {

            if (result.isConfirmed) {

                $("#loading").css("display", "flex");
                $.ajax({
                    url: Url,
                    dataType: "html",
                    type: "get",
                    success: function (res) {
                        $("#loading").css("display", "none");
                        Swal.fire("Deleted!", "", "success").then(function () {
                            $("#PartialUsers").html(res);
                            new DataTable('#TableUser', {
                                order: [[0, 'desc']]
                            });
                        });

                    }
                });

            }
        });

    }

</script>

