@model DataLayer.DomainModel.tbUsers

@using V2boardApi.Tools;
<div class="modal-content">
    <div class="modal-body">
        <div class="card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">شارژ کیف پول</h4>
                    <form class="form-sample">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group row">
                                    <input type="text" class="form-control" name="Wallet" id="Wallet" value="@Model.Wallet.Value.ConvertToMony()" oninput="separateDigits($(this).val(),'Wallet')">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-gradient-dark close" data-dismiss="modal">بستن</button>
        <button type="button" class="btn btn-gradient-success" onclick="SaveChange(this)">ذخیره</button>
    </div>
</div>

<script>
    $(".close").click(function () {
        $('.modal').modal('hide');

    });

    function SaveChange(input) {
        debugger
        var wallet = $("input[name='Wallet']").val();

        if (wallet.length >= 0 && wallet!="") {
            $("#loading").css("display", "flex");
            $.ajax({
                url: "@Url.Action("EditWallet", "Admin",new {area="App"})",
                type: "Post",
                data: { wallet: wallet, id: '@Model.User_ID' },
                datatype: "html",
                success: function (res) {
                    $("#loading").css("display", "none");
                    if (res == "1") {
                        Swal.fire({
                            title: "موفق",
                            text: "کیف پول کاربر با موفقیت شارژ شد",
                            icon: "success"
                        }).then(function () {
                            location.reload();

                        });
                    }
                    else if (res == "3") {
                        Swal.fire({
                            title: "خطا",
                            text: "لطفا مبلغ را به عدد وارد کنید",
                            icon: "error"
                        });
                        return;
                    }
                    else {
                        Swal.fire({
                            title: "خطا",
                            text: "خطا در برقراری ارتباط با سرور",
                            icon: "error"
                        });
                    }
                }
            });
        }
        else {
            Swal.fire({
                title: "Warning",
                text: "مقدار کیف پول نمی تواند خالی باشد",
                icon: "error"
            });
        }

    }

</script>

