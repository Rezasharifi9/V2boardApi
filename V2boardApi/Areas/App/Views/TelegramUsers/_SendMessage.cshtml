
<div class="modal-content">
    <div class="modal-body">
        <div class="card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">پیام به @ViewBag.name</h4>
                    <form class="form-sample">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group row">

                                    <textarea class="form-control" name="message" id="message" cols="10" rows="10"></textarea>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-gradient-success" onclick="SaveChange(this)">ذخیره</button>
        <button type="button" class="btn btn-gradient-dark close" data-dismiss="modal">بستن</button>
    </div>
</div>

<script>
    $(".close").click(function () {
        $('.modal').modal('hide');

    });

    function SaveChange(input) {
        var message = $("textarea[name='message']").val();

        if (message.length >= 0) {
            $("#loading").css("display", "flex");
            $.ajax({
                url: "@Url.Action("SendMessage", "TelegramUsers",new {area="App"})",
                type: "Post",
                data: { message: message, id: '@ViewBag.id' },
                datatype: "html",
                success: function (res) {
                    $("#loading").css("display", "none");
                    if (res == "1") {
                        Swal.fire({
                            title: "موفق",
                            text: "پیام با موفقیت ارسال شد",
                            icon: "success"
                        }).then(function () {
                            location.reload();
                        });
                    }
                    else if (res == "2") {
                        $("#loading").css("display", "none");
                        Swal.fire({
                            title: "خطا",
                            text: "این کاربر در ربات وجود ندارد",
                            icon: "error"
                        });
                        return;
                    }
                    else {
                        $("#loading").css("display", "none");
                        Swal.fire({
                            title: "خطا",
                            text: "این کاربر در ربات وجود ندارد یا ربات را بلاک کرده است",
                            icon: "error"
                        });
                        return;
                    }
                }
            });
        }
        else {
            $("#loading").css("display", "none");
            Swal.fire({
                title: "خطا",
                text: "لطفا متنی جهت ارسال وارد کنید",
                icon: "warning"
            });
            return;
        }

    }

</script>