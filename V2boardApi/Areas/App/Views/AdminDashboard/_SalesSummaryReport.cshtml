@model V2boardApi.Areas.App.Data.AdminDashboard.SalesSummaryViewModel
<div class="col-sm-6 col-lg-3 mb-4">
    <div class="card card-border-shadow-primary">
        <div class="card-body">
            <div class="d-flex align-items-center mb-2 pb-1">
                <div class="avatar me-2">
                    <span class="avatar-initial rounded bg-label-primary">
                        <i class="ti ti-truck ti-md"></i>
                    </span>
                </div>
                <h4 class="ms-1 mb-0">@V2boardApi.Tools.Utility.ConvertToMony(Model.TotalSales)</h4>
            </div>
            <p class="mb-1">فروش کل</p>
        </div>
    </div>
</div>
<div class="col-sm-6 col-lg-3 mb-4">
    <div class="card card-border-shadow-warning">
        <div class="card-body">
            <div class="d-flex align-items-center mb-2 pb-1">
                <div class="avatar me-2">
                    <span class="avatar-initial rounded bg-label-warning">
                        <i class="ti ti-alert-triangle ti-md"></i>
                    </span>
                </div>
                <h4 class="ms-1 mb-0">@Model.TotalCustomers</h4>
            </div>
            <p class="mb-1">کل مشتریان</p>
        </div>
    </div>
</div>
<div class="col-sm-6 col-lg-3 mb-4">
    <div class="card card-border-shadow-danger">
        <div class="card-body">
            <div class="d-flex align-items-center mb-2 pb-1">
                <div class="avatar me-2">
                    <span class="avatar-initial rounded bg-label-danger">
                        <i class="ti ti-git-fork ti-md"></i>
                    </span>
                </div>
                <h4 class="ms-1 mb-0">@V2boardApi.Tools.Utility.ConvertToMony(@Model.AgentSales)</h4>
            </div>
            <p class="mb-1">فروش کل نمایندگان</p>
        </div>
    </div>
</div>
<div class="col-sm-6 col-lg-3 mb-4">
    <div class="card card-border-shadow-info">
        <div class="card-body">
            <div class="d-flex align-items-center mb-2 pb-1">
                <div class="avatar me-2">
                    <span class="avatar-initial rounded bg-label-info">
                        <i class="ti ti-clock ti-md"></i>
                    </span>
                </div>
                <h4 class="ms-1 mb-0">@V2boardApi.Tools.Utility.ConvertToMony(Model.BotSales)</h4>
            </div>
            <p class="mb-1">فروش ربات</p>
        </div>
    </div>
</div>