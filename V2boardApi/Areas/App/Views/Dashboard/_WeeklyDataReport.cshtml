@model V2boardApi.Models.DashbordModel.WeeklyDataReportViewModel 
<div class="col-sm-6 col-lg-3 mb-4">
    <div class="card card-border-shadow-primary">
        <div class="card-body">
            <div class="d-flex align-items-center mb-2 pb-1">
                <div class="avatar me-2">
                    <span class="avatar-initial rounded bg-label-primary">
                        <i class="ti ti-truck ti-md"></i>
                    </span>
                </div>
                <h4 class="ms-1 mb-0">@V2boardApi.Tools.Utility.ConvertToMony(Model.Sale)</h4>
            </div>
            <p class="mb-1">فروش</p>
            <p class="mb-0">
                <span class="fw-medium me-1">
                    <bdi>@Model.ProfitSale</bdi>
                    درصد
                </span>
                <small class="text-muted">نسبت به هفته گذشته</small>
            </p>
        </div>
    </div>
</div>
