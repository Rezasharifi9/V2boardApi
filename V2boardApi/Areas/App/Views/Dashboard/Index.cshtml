@section customScripts {


    <!-- Page JS -->
    <script src="../../assets/js/app-logistics-dashboard.js"></script>
    <!-- Page JS -->
    <script src="~/assets/js/dashboards-crm.js"></script>

    <script>


        $(".setTitle").click(function () {

            var text = $(this).attr("title");

            $("#textBoxSell").text(text);

        });


        $("#click-kol").click(function () {

            $("#kol-sum").css("display", "block");
            $("#agent-sum").css("display", "none");
            $("#bot-sum").css("display", "none");
        });

        $("#click-agent").click(function () {

            $("#agent-sum").css("display", "block");
            $("#kol-sum").css("display", "none");
            $("#bot-sum").css("display", "none");

        });

        $("#click-bot").click(function () {

            $("#bot-sum").css("display", "block");

            $("#kol-sum").css("display", "none");
            $("#agent-sum").css("display", "none");

        });


        $(function () {

            $.ajax({
                url: "@Url.Action("_WeeklyDataReport", "Dashboard",new {area="App"})",
                type: "get",
                dataType: "html",
                beforeSend: function () {
                    blockUI(".section-loading");
                },
                success: function (res) {
                    UnblockUI(".section-loading");
                    $("#WeeklyDataReport").html(res);
                }
            });


            $.ajax({
                url: "@Url.Action("_GetPerformanceSystemReport", "Dashboard",new {area="App"})",
                type: "get",
                dataType: "html",
                async:true,
                beforeSend: function () {
                    blockUI(".section-loading-PerformanceSys");
                },
                success: function (res) {
                    UnblockUI(".section-loading-PerformanceSys");
                    $("#_PerformanceSys").html(res);
                }
            });

        });


    </script>

} 