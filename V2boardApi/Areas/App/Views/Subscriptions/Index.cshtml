@section customScripts {

    <script src="../../assets/js/charts-apex.js"></script>
    <script>

        // نمایش اطلاعات کلی کاربران
        $(function () {

            $.ajax({
                url: "@Url.Action("GetActivityUsers", "Subscriptions", new { area = "App" })",
                type: "GET",
                async: true,
                dataType: "json",
                success: function (res) {
                    console.log(res);

                    if (res.status == "success") {
                        $("#total_users").html(res.data.total_users);
                        $("#online_users").html(res.data.online_users);
                        $("#banned_users").html(res.data.banned_users);
                        $("#inactive_users").html(res.data.inactive_users);
                    }
                },
                error: function (xhr, status, error) {
                    console.error("An error occurred: " + status + " - " + error);
                }
            });

        });


        function generateQRCode(link) {

            $(".dtr-bs-modal").modal("hide");

            // Clear previous QR Code
            document.getElementById("qrcode").innerHTML = "";
            // Create new QR Code
            new QRCode(document.getElementById("qrcode"), {
                text: link,
                width: 200,
                height: 200
            });
        }

        function ShowQRCode(link) {
            generateQRCode(link);
            $("#modalQrCode").modal("show");
        }

        $("#qrcode").click(function () {

            copyToClipboard($(this).attr("title"));

        });

    </script>


    <script src="~/assets/libs/qrcode/qrcode.min.js"></script>
    <script src="../../assets/js/app-subscriptions-list.js"></script>


    <script>

        picker = document.querySelector('#expire-picker'),

            picker.flatpickr({
                disableMobile: "true",
                altInput: true,
                altFormat: 'j F Y',
                dateFormat: 'Y/m/d',
                locale: 'fa',
            });



    </script>
}