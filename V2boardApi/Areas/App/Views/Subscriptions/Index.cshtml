<!-- DataTable with Buttons -->
<div class="card">
    <div class="card-datatable table-responsive pt-0">
        <button style="z-index:1; float: left; margin-top: 16px; margin-left: 17px;" class="btn btn-secondary add-new btn-primary waves-effect waves-light" tabindex="0" data-bs-target="#modalCenter" data-bs-toggle="modal" type="button"><span><i class="ti ti-plus me-0 me-sm-1 ti-xs"></i><span class="d-none d-sm-inline-block">افزودن اشتراک</span></span></button>
        <table class="datatables-plan table">
            <thead>
                <tr>
                    <th></th>
                    <th>نام اشتراک</th>
                    <th>حجم کل</th>
                    <th>حجم مصرف شده</th>
                    <th>حجم باقی مانده</th>
                    <th>روز های باقی مانده</th>
                    <th>تعرفه</th>
                    <th>وضعیت</th>
                    <th>عملیات</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@*افزودن اشتراک جدید*@
<div aria-hidden="true" class="modal fade" id="modalCenter" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content section-block">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">افزودن اشتراک</h5>
                <button aria-label="بستن" class="btn-close" data-bs-dismiss="modal" type="button"></button>
            </div>
            <form class="add-new-user pt-0" id="addNewUserForm">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="row">
                        <div class="mb-3">
                            <label class="form-label" for="userSubname">نام اشتراک<span class="text-danger"> * </span></label>
                            <input type="text" id="userSubname" class="form-control" placeholder="amir" aria-label="amir"
                                   name="userSubname" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="userPlan">تعرفه<span class="text-danger"> * </span></label>
                            <select id="userPlan" class="select2 form-select userPlan" autocomplete="off" name="userPlan">
                            </select>
                            <div id="userPlanMessage" class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback d-none"><div data-field="userPlanMessage" data-validator="notEmpty">تعرفه را انتخاب کنید</div></div>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-label-secondary" data-bs-dismiss="modal" type="button"> بستن</button>
                    <button class="btn btn-primary" type="submit">ذخیره</button>
                </div>
            </form>
        </div>
    </div>
</div>




@*ویرایش اشتراک*@
